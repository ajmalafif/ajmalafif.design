---
layout: layouts/base.njk
section: post
---

<article class="mb6 ph3 ph0-ns pv4-ns">

  <div class=" wrap tc">
    <h1 class="f4 f2-ns fw6 tc pt4 pt5-ns mt0 mb3 lh-title">{{ title }}</h1>
      <small class="gray">
        <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time> by {{ metadata.author.name }}
      </small>
  </div>

  <div class=" wrap mw12">
    <div class=" center measure-wide lh-copy">
      {{ layoutContent | safe }}

        {% if tags %}
          <p class="moon-gray">
          This post is tagged under:
          {% for tag in tags %}
            {%- if tag != "post" -%}
              {% set tagUrl %}/tags/{{ tag }}/{% endset %}
              <a class="gray" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
            {%- endif -%}
          {% endfor %}
          </p>
        {% endif %}

          <nav>
            <a class="blue" href="{{ '/blog/' | url }}">‚Üê Back to blog</a>
          </nav>

    </div>
  </div>

</article>
